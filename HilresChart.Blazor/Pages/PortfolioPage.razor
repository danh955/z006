@page "/portfolio"
@attribute [Authorize]
@using HilresChart.Blazor.Shared.Portfolio
@using Syncfusion.Blazor.Layouts

<SfSplitter Height="100%" Width="100%" SeparatorSize="4" CssClass="">
    <SplitterPanes>
        <SplitterPane Size="25%" Min="60px">
            <ContentTemplate>
                <PortfolioList RowSelected="RowSelectedHandler" />
            </ContentTemplate>
        </SplitterPane>
        <SplitterPane Size="75%" Min="60px">
            <ContentTemplate>
                <PortfolioForm PortfolioId="@portfolioId" />
            </ContentTemplate>
        </SplitterPane>
    </SplitterPanes>
</SfSplitter>

@code
{
    private int portfolioId;

    private void RowSelectedHandler(int portfolioId)
    {
        this.portfolioId = portfolioId;
    }
}